          //  Response.Redirect("~/Login/LoginView");
        }

    }

<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Heroic Features - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Conntent/Contnt/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Conntent/Contnt/css/heroic-features.css" rel="stylesheet">

</head>

<body>

    <!-- Navigation -->
    <!-- Page Content -->
    <div class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron my-4">
            <h1 class="display-3">A Warm Welcome!</h1>
            <h4 class="lead"> Welcome to our Website!</h4>
            <h4>Find the best hotel and guide here. Do not forget to post your experience on the blog site. </h4>
        </header>

        <!-- Page Features  <div class="col-lg-3 col-md-6 mb-4"> -->
        <div class="row text-center">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="card h-100">
                        <img class="card-img-top" style="width:550px; height:330px;" src="@Url.Content(@item.Image)" alt=""> 
                       <!-- <img class="card-img-top" src="@Url.Content("~/Content/img/"+item.Image)" alt=""> -->
                        <div class="card-body">
                            <h4 class="card-title">@item.LocationName</h4>
                            <p class="card-text" style="height:60px">@item.Details. </p>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("HotelListView","HotelList",new { id = item.LocationId })" class="btn btn-primary">Find Hotel!</a>
                            <a href="@Url.Action("TourGuideListView","TourGuideList",new { id = item.LocationId })" class="btn btn-primary">Find Guide!</a>
                        </div>
                    </div>

                    <div style="height:50px">

                    </div>
                </div>
            }

            

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
    <!-- Footer -->

    <!-- Bootstrap core JavaScript -->
    <script src="~/Conntent/Contnt/vendor/jquery/jquery.min.js"></script>
    <script src="~/Conntent/Contnt/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>
