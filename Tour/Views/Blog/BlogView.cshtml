<!--@Model List<Blog>-->

    
    @{
        ViewBag.Title = "BlogView";
    }

    <html lang="en">

    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Heroic Features - Start Bootstrap Template</title>

        <!-- Bootstrap core CSS -->
        <link href="~/Conntent/Contnt/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

        <!-- Custom styles for this template -->
        <link href="~/Conntent/Contnt/css/heroic-features.css" rel="stylesheet">

    </head>

    <body>

        <!-- Navigation -->
        <!-- Page Content -->
        <div class="container" style="margin-top:50px;">
            @if (Session["userId"] == null)
            {
                <div class="container">
                    <div class="col-md-4"></div>
                    <div class="col-md-4 text-center" style="color:black; padding:20px;background-color:aliceblue;margin-bottom:50px;">
                        <p><a class="btn btn-info text-center" style="padding:20px;margin-left:0px;" href="@Url.Action("LoginView","login")">Login to post a blog</a></p>
                    </div>
                </div>
            }
            else
            {
                <div class="container">
                    <div class="col-md-4"></div>
                    <div class="col-md-4 text-center" style="color:black; padding:20px;background-color:aliceblue;margin-bottom:50px;">
                        <p><a class="btn btn-info text-center" style="padding:20px;margin-left:0px;" href="@Url.Action("BlogPostView","BlogPost")">Post a blog</a></p>
                    </div>
                </div>
            }


            <!-- Jumbotron Header -->
            <!-- Page Features  <div class="col-lg-3 col-md-6 mb-4"> -->
            <div class="row text-center">

                @foreach (var item in Model.blogs)
                {
                    <div class="col-md-2">
                        <div style="height:30px">

                        </div>
                    </div>
                    <div class="col-md-8 text-left" style="background-color: #f2f2f2; ">
                        <div class="card h-100">
                            <div class="card-body">
                                <h3 class="card-title text-center" style=""><b>@item.BlogTitle </b></h3>
                                @foreach (var item2 in Model.users)
                                {
                                    if (item2.UserId == item.UserId)
                                    {
                                        <h4 class="card-title text-center">Posted by : @item2.FirstName  @item2.LastName</h4>
                                        break;
                                    }
                                }

                                <h4 class="card-text" style="background-color:#fbfceb; padding:30px;">@item.BlogBody. </h4>
                            </div>
                        </div>

                        <div style="height:30px">

                        </div>
                    </div>
                    <div class="col-md-2">
                        <div style="height:30px">

                        </div>
                    </div>

                    <div style="height:300px;background-color:white;">

                    </div>
                }



            </div>
            <!-- /.row -->

        </div>
        <!-- /.container -->
        <!-- Footer -->
        <!-- Bootstrap core JavaScript -->
        <script src="~/Conntent/Contnt/vendor/jquery/jquery.min.js"></script>
        <script src="~/Conntent/Contnt/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


        
    </body>



</html>
